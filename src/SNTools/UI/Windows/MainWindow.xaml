<UserControl x:Class="SNTools.UI.Windows.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:custom="clr-namespace:SNTools.UI.Controls"
             xmlns:vm="clr-namespace:SNTools.UI.Windows.ViewModels"
             xmlns:pages="clr-namespace:SNTools.UI.Pages"
             xmlns:pagesvm="clr-namespace:SNTools.UI.Pages.ViewModels"
             mc:Ignorable="d" 
             Width="700" Height="700">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/UI/MainStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- VM-to-View mapping -->
            <DataTemplate DataType="{x:Type pagesvm:LoginPageViewModel}">
                <pages:LoginPage/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type pagesvm:IdentityPageViewModel}">
                <pages:IdentityPage/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type pagesvm:LobbyPlayersPageViewModel}">
                <pages:LobbyPlayersPage/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type pagesvm:SkinsPageViewModel}">
                <pages:SkinsPage/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type pagesvm:LobbiesPageViewModel}">
                <pages:LobbiesPage/>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    <UserControl.DataContext>
        <vm:MainWindowViewModel />
    </UserControl.DataContext>
    <custom:SubWindow Title="SN Tools" Visibility="Visible">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ListBox ItemsSource="{Binding ActiveCategories}" SelectedItem="{Binding CurrentCategory}" x:Name="PageList" DisplayMemberPath="Name" Background="#2000" SelectedIndex="0"/>
            <ContentControl Grid.Column="1" Content="{Binding CurrentCategory.ViewModel}" Margin="20"/>
        </Grid>
    </custom:SubWindow>
</UserControl>
