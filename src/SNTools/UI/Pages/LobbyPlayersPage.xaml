<UserControl x:Class="SNTools.UI.Pages.LobbyPlayersPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SNTools.UI.Pages"
             xmlns:vm="clr-namespace:SNTools.UI.Pages.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="630" d:DesignWidth="460">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/UI/MainStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <UserControl.DataContext>
        <vm:LobbyPlayersPageViewModel />
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Background="#277A" CornerRadius="15">
            <ListBox Height="200" Grid.RowSpan="2" ItemsSource="{Binding LobbyPlayerButtonModels}"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 SelectedItem="{Binding SelectedPlayer}">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="2"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="FontSize" Value="15"/>
                        <Setter Property="Margin" Value="10"/>
                        <Setter Property="IsEnabled" Value="{Binding Enabled}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8" BorderBrush="{Binding Color}" BorderThickness="{TemplateBinding BorderThickness}">
                                        <Grid Margin="5">
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                                <Border Background="#2000" Padding="3" CornerRadius="6" Margin="0 0 6 0">
                                                    <TextBlock FontSize="10">Slot <Run Text="{Binding Slot, Mode=OneWay}"/></TextBlock>
                                                </Border>
                                                <Border Background="#3AAF" Padding="3" CornerRadius="6">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsLocal}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock FontSize="10">Local</TextBlock>
                                                </Border>
                                            </StackPanel>
                                            <TextBlock TextTrimming="CharacterEllipsis" Text="{Binding DisplayName}" FontWeight="SemiBold" Grid.Row="1" FontSize="12" TextAlignment="Center"/>
                                            <TextBlock TextTrimming="CharacterEllipsis" Text="{Binding Id}" Grid.Row="2" FontSize="10" TextAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#1000"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#3AAF"/>
                                            <Setter Property="BorderThickness" Value="3"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="#A111"/>
                                            <Setter Property="Opacity" Value="0.7"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3" Rows="2"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
        </Border>
    </Grid>
</UserControl>
